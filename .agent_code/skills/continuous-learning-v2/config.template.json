{
  "version": "2.0",
  "observation": {
    "enabled": true,
    // IMPORTANT: Replace the path below with the correct path for your target environment
    // Claude Code: "~/.claude/homunculus/observations.jsonl"
    // OpenCode: "~/.config/opencode/homunculus/observations.jsonl"
    // Antigravity: "%USERPROFILE%\\.gemini\\antigravity\\homunculus\\observations.jsonl"
    "store_path": "~/.claude/homunculus/observations.jsonl",
    "max_file_size_mb": 10,
    "archive_after_days": 7,
    "capture_tools": ["Edit", "Write", "Bash", "Read", "Grep", "Glob"],
    "ignore_tools": ["TodoWrite"]
  },
  "instincts": {
    // IMPORTANT: Replace the paths below with the correct paths for your target environment
    "personal_path": "~/.claude/homunculus/instincts/personal/",
    "inherited_path": "~/.claude/homunculus/instincts/inherited/",
    "min_confidence": 0.3,
    "auto_approve_threshold": 0.7,
    "confidence_decay_rate": 0.02,
    "max_instincts": 100
  },
  "observer": {
    "enabled": false,
    "model": "haiku",
    "run_interval_minutes": 5,
    "min_observations_to_analyze": 20,
    "patterns_to_detect": [
      "user_corrections",
      "error_resolutions",
      "repeated_workflows",
      "tool_preferences",
      "file_patterns"
    ]
  },
  "evolution": {
    // IMPORTANT: Replace the path below with the correct path for your target environment
    "evolved_path": "~/.claude/homunculus/evolved/",
    "auto_evolve": false
  },
  "integration": {
    "skill_creator_api": "https://skill-creator.app/api",
    "backward_compatible_v1": true
  }
}